---
import Layout from "my-church-site\src\layouts\Layout.astro"
---

<!-- src/pages/index.astro -->
<section class="bg-white text-gray-800">
  <!-- Navigation -->
  <nav class="container mx-auto flex items-center justify-between p-6">
    <a href="#" class="text-2xl font-bold">Grace Community Church of Long Beach</a>
    <ul class="hidden md:flex space-x-8">
      <li><a href="#about" class="hover:text-blue-600">About</a></li>
      <li><a href="#services" class="hover:text-blue-600">Services</a></li>
      <li><a href="#events" class="hover:text-blue-600">Events</a></li>
      <li><a href="#contact" class="hover:text-blue-600">Contact</a></li>
    </ul>
    <button class="md:hidden focus:outline-none">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </nav>

  <!-- Hero -->
  <div class="relative bg-cover bg-center h-screen" style="background-image: url('/images/hero.png');">
    <div class="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center">
      <div class="text-center text-white px-4">
        <h1 class="text-4xl md:text-6xl font-extrabold mb-4">Welcome to Grace</h1>
        <p class="text-lg md:text-2xl mb-6">A community growing together in faith and love.</p>
        <a href="#services" class="px-6 py-3 bg-blue-600 hover:bg-blue-700 rounded text-white font-semibold">Learn More</a>
      </div>
    </div>
  </div>

  <!-- About Section -->
  <section id="about" class="container mx-auto py-16 px-4">
    <div class="md:flex md:items-center md:space-x-8">
      <div class="md:w-1/2 mb-8 md:mb-0">
        <img src="/images/about.jpg" alt="About Grace Church" class="rounded-lg shadow-lg" />
      </div>
      <div class="md:w-1/2">
        <h2 class="text-3xl font-bold mb-4">Our Mission</h2>
        <p class="text-gray-700 leading-relaxed mb-4">
          At Grace Church, we strive to share the love of Christ through worship, service, and community outreach. Our doors are open to all seeking hope, connection, and spiritual growth.
        </p>
        <a href="#contact" class="inline-block px-5 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded">Get Involved</a>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section id="services" class="bg-gray-50 py-16 px-4">
    <div class="container mx-auto text-center">
      <h2 class="text-3xl font-bold mb-12">Service Times</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="bg-white p-6 rounded-lg shadow">
          <h3 class="text-xl font-semibold mb-2">Sunday Morning</h3>
          <p>9:00 AM</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow">
          <h3 class="text-xl font-semibold mb-2">Wednesday Bible Study</h3>
          <p>7:00 PM</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow">
          <h3 class="text-xl font-semibold mb-2">Men's Prayer  Group</h3>
          <p>1:00 PM</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow">
          <h3 class="text-xl font-semibold mb-2">Women's Prayer Group</h3>
          <p>TBD</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Events Section -->
  <section id="events" class="container mx-auto py-16 px-4">
    <h2 class="text-3xl font-bold text-center mb-12">Upcoming Events</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Example Event Card -->
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <img src="/images/event1.jpg" alt="Event 1" class="w-full h-48 object-cover" />
        <div class="p-6">
          <h3 class="text-xl font-semibold mb-2">Community Outreach</h3>
          <p class="text-gray-700 mb-4">Mission: To declare the Gospel of Jesus Christ with unbelievers and minister prayer to believers at a local park.

          <p class="text-gray-500 text-sm">May 10, 2025</p>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow overflow-hidden">
        <img src="/images/event1.jpg" alt="Event 1" class="w-full h-48 object-cover" />
        <div class="p-6">
          <h3 class="text-xl font-semibold mb-2">Community Outreach</h3>
          <p class="text-gray-700 mb-4">Mission: To declare the Gospel of Jesus Christ with unbelievers and minister prayer to believers at a local park.

          <p class="text-gray-500 text-sm">May 17, 2025</p>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow overflow-hidden">
        <img src="/images/event1.jpg" alt="Event 1" class="w-full h-48 object-cover" />
        <div class="p-6">
          <h3 class="text-xl font-semibold mb-2">Community Outreach</h3>
          <p class="text-gray-700 mb-4">Mission: To declare the Gospel of Jesus Christ with unbelievers and minister prayer to believers at a local park.

          <p class="text-gray-500 text-sm">May 24, 2025</p>
        </div>
      </div>

      <!-- Duplicate cards as needed -->
    </div>
  </section>

  <!-- Contact Section -->
<section id="contact" class="bg-blue-600 text-white py-16 px-4">
  <div class="container mx-auto flex flex-col items-center text-center">
    <h2 class="text-3xl font-bold mb-4">Get in Touch</h2>
    <p class="mb-6">Have questions or want to learn more? Send us a message and we'll get back to you soon!</p>
    <form class="space-y-4 w-full max-w-md">
      <div>
        <label for="name" class="block text-left">Name</label>
        <input id="name" type="text" class="w-full mt-1 p-2 rounded text-gray-800" placeholder="Your Name" required />
      </div>
      <div>
        <label for="email" class="block text-left">Email</label>
        <input id="email" type="email" class="w-full mt-1 p-2 rounded text-gray-800" placeholder="you@example.com" required />
      </div>
      <div>
        <label for="message" class="block text-left">Message</label>
        <textarea id="message" rows="4" class="w-full mt-1 p-2 rounded text-gray-800" placeholder="Your message..." required></textarea>
      </div>
      <button type="submit" class="px-6 py-3 bg-white text-blue-600 font-semibold rounded hover:bg-gray-100">Send Message</button>
    </form>
  </div>
</section>


  <!-- Footer -->
  <footer class="bg-gray-800 text-gray-400 py-8">
    <div class="container mx-auto text-center">
      <p>&copy; 2025 Grace Church Long Beach. All rights reserved.</p>
      <div class="mt-4 space-x-4">
        <a href="#" class="hover:text-white">Privacy Policy</a>
        <a href="#" class="hover:text-white">Terms of Use</a>
      </div>

  <!-- Social Media Links -->
      <div class="mt-4 flex justify-center space-x-6">
   <div style="display: flex; justify-content: center; gap: 16px; padding: 1rem;">
  <a href="#" aria-label="YouTube">
    <img src="/images/icons/youtube.png" alt="YouTube" style="width: 24px; height: 24px;">
  </a>
  <a href="#" aria-label="Facebook">
    <img src="/images/icons/facebook.png" alt="Facebook" style="width: 24px; height: 24px;">
  </a>
  <a href="#" aria-label="Twitter">
    <img src="/images/icons/twitter.png" alt="Twitter" style="width: 24px; height: 24px;">
  </a>
  <a href="#" aria-label="Instagram">
    <img src="/images/icons/instagram.png" alt="Instagram" style="width: 24px; height: 24px;">
  </a>
</div>

 
</div>
      </div>
    </div>
  </footer>
</section>

